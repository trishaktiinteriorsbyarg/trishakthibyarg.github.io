---

import Layout from '../layouts/Layout.astro';
---

<Layout
  description="Explore our portfolio of beautiful interiors in Hyderabad."
  title="Gallery Â· Trishakthi by ARG"
>
  <!-- Main Container -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-primary-50 dark:bg-primary-950">
    
    <!-- Abstract Background Blur -->
    <div class="absolute inset-0 w-full h-full overflow-hidden pointer-events-none">
       <div class="absolute top-[-10%] left-[-10%] w-[40rem] h-[40rem] bg-indigo-200/20 dark:bg-indigo-900/10 rounded-full blur-3xl opacity-60 mix-blend-multiply dark:mix-blend-screen animate-pulse"></div>
       <div class="absolute bottom-[-10%] right-[-10%] w-[40rem] h-[40rem] bg-orange-200/20 dark:bg-orange-900/10 rounded-full blur-3xl opacity-60 mix-blend-multiply dark:mix-blend-screen animate-pulse animation-delay-2000"></div>
    </div>

    <div class="relative z-10 w-full max-w-7xl px-4 sm:px-6 lg:px-8 grid lg:grid-cols-2 gap-12 items-center">
      
      <!-- Left Content: Typography focus -->
      <div class="text-left space-y-8">
        <h2 class="text-sm font-semibold tracking-widest text-primary-500 uppercase">Portfolio</h2>
        <h1 class="text-5xl md:text-7xl font-light tracking-tight text-primary-950 dark:text-primary-50">
          The Living <br/>
          <span class="font-serif italic font-medium">Portfolio</span>
        </h1>
        <p class="text-xl md:text-2xl text-primary-950/60 dark:text-primary-200/60 max-w-lg leading-relaxed">
          Static galleries are a thing of the past. Witness our latest creations, site visits, and inspirations as they unfold in real-time.
        </p>

        <div class="pt-4">
          <a
            href="https://www.instagram.com/trishakti_by_arg/"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-4 text-primary-950 dark:text-primary-50 border-b border-primary-950 dark:border-primary-50 pb-1 hover:border-transparent transition-all duration-300"
          >
            <span class="text-lg font-medium tracking-wide group-hover:tracking-wider transition-all">Explore on Instagram</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="transform -rotate-45 group-hover:rotate-0 transition-transform duration-300">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Content: Abstract Visual / Card -->
      <div class="hidden lg:flex justify-center items-center relative">
        <!-- Decorative Card Stack -->
        <div class="relative w-80 h-96 bg-white dark:bg-primary-900 shadow-2xl rounded-2xl transform rotate-3 opacity-90 transition-transform duration-500 hover:rotate-6 flex items-center justify-center border border-primary-900/5 dark:border-primary-100/10">
           <div class="absolute inset-4 border border-dashed border-primary-950/20 dark:border-primary-50/20 rounded-xl"></div>
           <span class="font-serif italic text-4xl text-primary-950/10 dark:text-primary-50/10 select-none">Est. 2024</span>
        </div>
        <div class="absolute w-80 h-96 bg-primary-100 dark:bg-primary-800 shadow-xl rounded-2xl transform -rotate-3 z-[-1] opacity-80"></div>
      </div>
      
    </div>
  </section>
</Layout>
